#!/usr/bin/env bash
# Configure HAProxy Load Balancer server
sudo apt-get -y install software-properites-common
sudo add-apt-repository -y ppa:vbernat/haproxy-2.7
apt-get -y update
apt-get -y install haproxy=2.7.\*
echo "frontend http
	bind *:80
	mode http
	default_backend web-backend
	backend web-backend
	balance roundrobin
	server 161688-web-01 54.152.57.180
	server 161688-web-02 3.84.239.204" >> /etc/haproxy/haproxy.cfg
sudo service haproxy restart
